{
  "name": "templ-project-nodejs-addon-node-api",
  "version": "0.0.3",
  "description": "NodeJs Addon Project Template using Node Addon Api",
  "main": "dist/index.js",
  "scripts": {
    "build:addon": "npm run build:addon:gyp -- --verbose",
    "build:addon:cmake": "npx cmake-js configure && npx cmake-js build",
    "build:addon:gyp": "npx node-gyp configure && npx node-gyp build",
    "build:addon:xmake": "xmake",
    "build:dev": "npm run build:addon -- --debug",
    "build": "npm run build:addon",
    "ca:lint": "npm run prettier:write && npm run lint:write",
    "ca:quality": "npm run jscpd && npm run depcruise",
    "ca:security": "npm run license-check && (npm audit --production || yarn audit --groups=dependencies)",
    "ca": "npm run ca:lint && npm run ca:quality && npm run ca:security",
    "clean": "rimraf build/* coverage",
    "depcruise": "depcruise --config .dependency-cruiser.js src",
    "doc:watch": "nodemon --exec 'npm run doc'",
    "docs": "documentation build src/** -f html -o docs; documentation build src/** -f json -o docs.json",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "jscpd": "jscpd ./src --blame",
    "license-check": "license-checker --production --json --failOn='AGPL AGPL 1.0; AGPL 3.0; CDDL or GPLv2 with exceptions; CNRI Python GPL Compatible; Eclipse 1.0; Eclipse 2.0; GPL; GPL 1.0; GPL 2.0; GPL 2.0 Autoconf; GPL 2.0 Bison; GPL 2.0 Classpath; GPL 2.0 Font; GPL 2.0 GCC; GPL 3.0; GPL 3.0 Autoconf; GPL 3.0 GCC; GPLv2 with XebiaLabs FLOSS License Exception; LGPL; LGPL 2.0; LGPL 2.1; LGPL 3.0; Suspected Eclipse 1.0; Suspected Eclipse 2.0'",
    "lint:cpp:write": "npm run lint:cpp -- --fix",
    "lint:cpp": "cross-env CLANG_ARGS=\"-std=c++1z -x c++\" node .scripts/clang-lint.js ./{src,test}/**/*.{c,cc,cpp,h}",
    "lint:js:write": "npm run lint:js -- --fix",
    "lint:js": "eslint ./{src,test}/**/*.js",
    "lint:watch": "nodemon --exec 'npm run lint'",
    "lint:write": "npm run lint:cpp:write && npm run lint:js:write",
    "lint": "npm run lint:cpp && npm run lint:js",
    "postinstall": "husky install",
    "prebuild": "npm run clean",
    "prebuildc:dev": "npm run clean",
    "prebuildc": "npm run clean",
    "prerelease": "npm run build",
    "pretest:single": "npm run build",
    "prettier:check": "npm run prettier:cpp:check && npm run prettier:js:check",
    "prettier:cpp:check": "npm run prettier:cpp -- -dry-run",
    "prettier:cpp:write": "npm run prettier:cpp -- -i",
    "prettier:cpp": "node .scripts/clang-prettier.js ./{src,test}/**/*.{c,cc,cpp,h} --verbose -style=file",
    "prettier:js:check": "npm run prettier:js -- --list-different",
    "prettier:js:write": "npm run prettier:js -- --write",
    "prettier:js": "prettier ./{src,test}/**/*.js",
    "prettier:write": "npm run prettier:cpp:write && npm run prettier:js:write",
    "prettier": "npm run prettier:cpp && npm run prettier:js",
    "release": "release-it --ci --no-npm.publish",
    "sonar": "sonar-scanner",
    "test:junit": "npm run test -- --reporter mocha-junit-reporter --reporter-options mochaFile=.junit.xml",
    "test:single": "cross-env NODE_ENV=test nyc --reporter=html --reporter=lcov --reporter=text --extension .js mocha --forbid-only",
    "test:watch": "npm run test -- --watch",
    "test": "npm run test:single -- './test/**/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/node-addon-node_api.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/templ-project/node/issues"
  },
  "homepage": "https://github.com/templ-project/node#readme",
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/eslint-parser": "^7.15.4",
    "@babel/preset-env": "7.15.6",
    "@babel/register": "7.15.3",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@jscpd/badge-reporter": "^3.3.23",
    "@release-it/conventional-changelog": "^3.3.0",
    "chai": "^4.3.4",
    "cmake-js": "^6.2.1",
    "colors": "^1.4.0",
    "commander": "^8.2.0",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^10.2.0",
    "docsify-cli": "^4.4.3",
    "documentation": "^13.2.5",
    "enquirer": "^2.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonar": "^0.6.1",
    "eslint-plugin-sonarjs": "^0.10.0",
    "globby": "11.0.4",
    "husky": "^7.0.2",
    "jscpd": "^3.3.26",
    "license-checker": "^25.0.1",
    "mocha": "^9.1.1",
    "mocha-junit-reporter": "^2.0.0",
    "node-cmake": "^2.5.1",
    "node-gyp": "^8.2.0",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "release-it": "^14.11.5",
    "rimraf": "^3.0.2",
    "sonarqube-scanner": "^2.8.1",
    "twig": "^1.15.4",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {},
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^4.1.0"
  },
  "gypfile": true
}